{
	"BlueprintCSS Row": {
		"prefix": "bp-row",
		"body": [
			"<div bp-layout=\"row\">",
			"  <div bp-layout=\"col ${1:colsize}@${2:breakpoint}\">",
			"    $3",
			"  </div>",
			"</div>"
		],
		"description": "Create grid row"
	},
	"BlueprintCSS Col": {
		"prefix": "bp-col",
		"body": [
			"<div bp-layout=\"col ${1:colsize}@${2:breakpoint}\">",
			"  $3",
			"</div>"
		],
		"description": "Create grid column"
	},
	"BlueprintCSS Max": {
		"prefix": "bp-max",
		"body": [
			"<div bp-layout=\"${1:colsize}--max\">",
			"  $2",
			"</div>"
		],
		"description": "Create max wrapper"
	},
	"BlueprintCSS Show": {
		"prefix": "bp-show",
		"body": [
			"<div bp-layout=\"hide show@${2:breakpoint}\">",
			"  $3",
			"</div>"
		],
		"description": "Show at brakepoint"
	}
}